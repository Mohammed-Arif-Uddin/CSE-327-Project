        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rent" />

    <TextView
        android:id="@+id/textViewSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Size" />

    <Button
        android:id="@+id/buttonSendMessage"
